# -*- mode: snippet -*-
# name: onOptionsItemSelected() {...}
# key: option_handler
# --
@Override
public boolean onOptionsItemSelected(MenuItem item) {
    // Handle presses on the action bar items
    switch (item.getItemId()) {
        case R.id.$0:
            return true;
        default:
            return super.onOptionsItemSelected(item);
    }
}